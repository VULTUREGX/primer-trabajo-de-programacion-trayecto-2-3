paquete  ejercicio0000640 ;

/**
* Ejercicio 640: Comprobar si un valor x existe en un arreglo y un valor y después en un arreglo.
*
* @autor: Juan Ortiz Ordóñez
*/
public  class  ValidacionExistenciaNumeros {
    public  static  void  main ( String [] args ) {
        int [] numeros = { 2 , 3 , 5 , 7 , 11 , 13 , 17 };

        sistema _ fuera _ println ( existenValores ( numeros , 2 , 17 )); // verdadero
        sistema _ fuera _ println ( existenValores ( numeros , 2 , 19 )); // falso
        sistema _ fuera _ println ( existenValores ( numeros , 5 , 11 )); // verdadero
    }

    public  static  boolean  existenValores ( int [] numeros , int  x , int  y ) {
        for ( int  i = 0 ; i < numeros . length ; i ++) {
            si ( numeros [ i ] == x ) {
                for ( int  j = i + 1 ; j < numeros . longitud ; j ++) {
                    if ( numeros [ j ] == y ) {
                        devolver  verdadero ;
                    }
                }
                romper ;
            }
        }

        devolver  falso ;
    }
}
